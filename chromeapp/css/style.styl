body
	background-image url(../img/texture.png)
@font-face
	font-family Emoji
	src url(OpenSansEmoji.ttf)
@font-face
	font-family StarM
	src url(Staromoskovsky.otf)
@font-face
	font-family RedO
	src url(RedOctober-Regular.ttf)	
header
	width 600px
	margin 20px auto -10px
	#chvk
		display inline
		font-size 34px 
		font-weight bold
		text-align left
		color black
		opacity 0.3
		transition opacity .4s ease
		font-family RedO
		text-shadow 0 2px 4px transparent
		div 
			display inline-block
			vertical-align top
			transition all .4s ease
			overflow hidden
			&#ch
				width 24px
				margin-right 2px
				text-align left
			&#vk 
				width 49px
				text-align left
		&:hover
			opacity 1
			text-shadow 0px 2px 4px red
			div#ch 
				width 90px
			div#vk 
				width 254px
	#writeToPasha
		display inline
		float right
		text-align right
		line-height 51px
		font-size 18px
		color black
		opacity 0.4
		font-family StarM
		cursor pointer
		transition all .4s ease
		&:hover
			opacity 1 
main
	font-family Helvetica, Arial, Emoji
	width 600px
	margin 0 auto
	h1
	h2
		text-align center
	.mainframe
	.auth
	.errorframe
		display none
	&.error
		.errorframe
			display block
	&.authorized
		.mainframe
			display block
			ul#messages
				padding 0
				>li
					list-style-type none
					margin-bottom 10px
					transition all .2s ease
					-webkit-transform rotateX(0deg)
					opacity 1
					&.hidden
						-webkit-transform rotateX(-90deg)
						opacity 0
						height 0
						margin 0
					.author
						font-style italic
						//border-bottom 1px dotted
						//cursor pointer
					.attachments
						color gray
						font-size 80%
						font-style italic
						margin-top 5px
						>*
							display inline-block
							vertical-align top
							margin-right 5px
			textarea#send
				width 100%
				margin-bottom 20px
				border 1px solid black
				padding 1%
				background white
				box-shadow inset 1px 1px 1px rgba(0,0,0,0.2)
				box-sizing border-box
			.selectize-control.single .selectize-input
				background-image none
				background white
				box-shadow inset 1px 1px 1px rgba(0,0,0,0.2)
				border-radius 0
				border 1px solid black
				font-size 100%
				color #222
				span.name:before
					content 'Сообщение для: '
					color #aaa
				>input
					font-size 100%
			input#for
				border 1px solid black
				padding 1%
				box-sizing border-box
				margin-bottom 20px
	&.nonauthorized
		.auth
			display block
@media screen and (max-width:620px)
	main
		width 100%
		padding 0 3%
		box-sizing border-box
